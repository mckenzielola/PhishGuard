{ 
  "name": "Phishing Life Saver",
  "version": "0.1",
  "manifest_version": 3,
  "description": "Like a lifesaver, gives you a second chance",
  "permissions": ["tabs", "activeTab", "scripting"],
  "content_scripts": [
      {
          "matches": ["*://mail.google.com/*"],
          "js": ["./scripts/content.js"],
          "css" : ["./css/styles.css"]
      }
  ],
  "background": {
      "service_worker": "./scripts/background.js"
  },
  "action": {
      "default_title": ";)",
      "default_popup": "popup.html",
      
      "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
      
    }
  }
}
